---
import { Image } from "astro:assets";
import avatar_image from "../assets/images/avatar_image.jpg";
---

<Image
  src={avatar_image}
  alt="Norris Hipolito Jr."
  height={150}
  width={150}
  class={"blob h-full w-full object-cover object-center shadow-[0_5px_5px_5px_rgba(36,36,36,1)] dark:shadow-[0_3px_3px_4px_rgba(239,239,240,0.6)]"}
  quality={100}
/>

<style>
  /* blob */
  .blob {
    width: 150px;
    height: 150px;
    margin: 20px;
    animation: animate 5s ease-in-out infinite;
    transition: all 1s ease-in-out;
  }

  @keyframes animate {
    0%,
    100% {
      border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
    }
    50% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
  }
</style>
