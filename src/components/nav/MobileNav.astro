---
import Hamburger from "./hamburger";
import ToggleThemeButton from "../tsx/ToggleThemeButton";
---

<nav
  class="sticky h-20 flex-row w-full px-6 z-50 left-0 top-0 shadow-md md:hidden bg-gradient-to-b from-zinc-50 to-zinc-300 text-slate-200 dark:bg-gradient-to-b dark:from-zinc-800 dark:to-zinc-900 justify-center"
  transition:persist
>
  <div class="flex flex-row items-center justify-between h-full">
    <a href="/" class="flex flex-col items-center">
      <h1 class="text-lg font-bold text-slate-800 dark:text-white">
        Norris Hipolito Jr.
      </h1>
    </a>
    <ul class="flex flex-row items-center justify-end gap-3">
      <li class="border-r border-gray-400 pr-3">
        <ToggleThemeButton transition:persist client:idle />
      </li>
      <li class="border-gray-400">
        <Hamburger client:load />
      </li>
    </ul>
  </div>
</nav>
