---
interface Props {
  href?: string;
}

const { href } = Astro.props;
---

<li>
  <a
    href={href}
    class="flex flex-row text-base font-semibold text-gray-600 underline underline-offset-4 transition-all hover:scale-105 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white gap-2"
  >
    <slot />
  </a>
</li>
